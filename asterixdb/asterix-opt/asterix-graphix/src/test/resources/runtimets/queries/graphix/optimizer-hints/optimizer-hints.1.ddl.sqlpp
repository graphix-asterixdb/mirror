DROP DATAVERSE Yelp IF EXISTS;
CREATE DATAVERSE Yelp;
USE Yelp;

CREATE TYPE UsersType AS { user_id: bigint };
CREATE DATASET Users (UsersType) PRIMARY KEY user_id;

CREATE TYPE FriendsType AS { user_id: bigint, friend: bigint };
CREATE DATASET Friends (FriendsType) PRIMARY KEY user_id, friend;

CREATE TYPE ReviewsType AS { review_id: string, user_id: bigint };
CREATE DATASET Reviews (ReviewsType) PRIMARY KEY review_id, user_id;
