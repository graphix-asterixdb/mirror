// Verify that the vertex label used in a query exists in the graph schema.
USE TestDataverse;
WITH
    GRAPH TestGraph AS
        VERTEX (:Vertex1)
            PRIMARY KEY (_id)
            AS GenericDataset,
        EDGE (:Vertex1)-[:EDGE_1]->(:Vertex1)
            SOURCE KEY      (_id)
            DESTINATION KEY (_to_id)
            AS (
                FROM
                    GenericDataset GD
                SELECT
                    GD._id    AS _id,
                    GD._to_id AS _to_id
            )
FROM
    GRAPH TestGraph
        (v1:NonExistentLabel)-[e1]-(v3),
        (v2)-[e2]-(v4)
SELECT
    v1 AS v1,
    v2 AS v2,
    v3 AS v3,
    v4 AS v4,
    e1 AS e1,
    e2 AS e2;
