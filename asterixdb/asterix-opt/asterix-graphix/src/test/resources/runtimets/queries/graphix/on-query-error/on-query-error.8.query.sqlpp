// Verify that our graph schema is valid for anonymous graphs.
USE TestDataverse;
WITH
    GRAPH TestGraph AS
        VERTEX (:Vertex1)
            PRIMARY KEY (_id)
            AS GenericDataset,
        VERTEX (:Vertex1)
            PRIMARY KEY (_id)
            AS ( FROM GenericDataset SELECT * ),
        EDGE (:Vertex1)-[:EDGE_1]->(:Vertex1)
            SOURCE KEY      (_id)
            DESTINATION KEY (_to_id)
            AS (
                FROM
                    GenericDataset GD
                SELECT
                    GD._id    AS _id,
                    GD._to_id AS _to_id
            )
FROM
    GRAPH TestGraph
        (v1:Vertex1)-[:EDGE_1]-(v2:Vertex1)
SELECT
    v1,
    v2;
