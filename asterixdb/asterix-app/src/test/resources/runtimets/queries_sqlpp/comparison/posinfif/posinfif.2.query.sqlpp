from
  [ [0, true], [1, false], [2,2], [3,3], [4,"abc"], [5,"def"] ] t1,
  [ [0, true], [1, false], [2,2], [3,3], [4,"abc"], [5,"def"] ] t2
select value [ t1[1], t2[1], to_string(posinf_if(t1[1], t2[1])) ]
order by t1[0], t2[0]
