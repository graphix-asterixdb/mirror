/*
 * Description  : This test case is to verify the fix for issue786
 * https://code.google.com/p/asterixdb/issues/detail?id=786
 * Expected Res : SUCCESS
 * Date         : 10th Oct. 2014
 */

USE tpch;


SELECT  nation.n_nationkey AS nation_key,
        nation.n_name AS name,
        (
            SELECT orderdate AS order_date, sum(o.o_totalprice) AS sum_price
            FROM  Orders o,
                  Customer c
            WHERE o.o_custkey = c.c_custkey AND c.c_nationkey = nation.n_nationkey
            GROUP BY o.o_orderdate as orderdate
            ORDER BY sum_price DESC
            LIMIT 3
        ) AS aggregates
FROM  Nation AS nation,
      SelectedNation AS sn
WHERE nation.n_nationkey = sn.sn_nationkey
;
