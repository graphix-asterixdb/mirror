USE tpcds;

WITH ssales AS
(SELECT c_last_name
      ,c_first_name
      ,s_store_name
      ,ca_state
      ,s_state
      ,i_color
      ,i_current_price
      ,i_manager_id
      ,i_units
      ,i_size
      ,SUM(ss.ss_sales_price) netpaid
FROM store_sales ss
    ,store_returns sr
    ,store s
    ,item i
    ,customer c
    ,customer_address ca
WHERE ss.ss_ticket_number = sr.sr_ticket_number
  AND ss.ss_item_sk = sr.sr_item_sk
  AND ss.ss_customer_sk = c.c_customer_sk
  AND ss.ss_item_sk = i.i_item_sk
  AND ss.ss_store_sk = s.s_store_sk
  AND c.c_birth_country = uppercase(ca.ca_country)
  AND s.s_zip = ca.ca_zip
  AND s.s_market_id = 7
GROUP BY c.c_last_name
        ,c.c_first_name
        ,s.s_store_name
        ,ca.ca_state
        ,s.s_state
        ,i.i_color
        ,i.i_current_price
        ,i.i_manager_id
        ,i.i_units
        ,i.i_size)
SELECT c_last_name
      ,c_first_name
      ,s_store_name
      ,paid
FROM ssales
WHERE i_color = 'chiffon'
GROUP BY c_last_name
        ,c_first_name
        ,s_store_name
GROUP AS g
LET paid = SUM(netpaid)
HAVING paid > (SELECT value 0.05*avg(g.ssales.netpaid) FROM g)[0]
;