// testing fix for ASTERIXDB-2288 related to field access with UNION
USE TinySocial;

SELECT name, string_length(name) as len
FROM (SELECT VALUE c FROM ChirpUsers c UNION ALL SELECT VALUE g FROM GleambookUsers g) AS a
ORDER BY name;