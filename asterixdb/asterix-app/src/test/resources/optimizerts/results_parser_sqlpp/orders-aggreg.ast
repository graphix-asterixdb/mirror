DataverseUse `orders-aggreg`
TypeDecl OrderType [
  closed RecordType {
    oid : integer,
    cid : integer,
    orderstatus : string,
    orderpriority : string,
    clerk : string,
    total : float
  }
]
DatasetDecl Orders(OrderType) partitioned by [[oid]]
Query:
SELECT ELEMENT [
RecordConstructor [
  (
    LiteralExpr [STRING] [cid]
    :
    Variable [ Name=$cid ]
  )
  (
    LiteralExpr [STRING] [ordpercust]
    :
    FunctionCall asterix.count@1[
      Variable [ Name=$g ]
    ]
  )
  (
    LiteralExpr [STRING] [totalcust]
    :
    FunctionCall asterix.sum@1[
      (
        SELECT ELEMENT [
        FieldAccessor [
          FieldAccessor [
            Variable [ Name=$i ]
            Field=o
          ]
          Field=total
        ]
        ]
        FROM [          Variable [ Name=$g ]
          AS Variable [ Name=$i ]
        ]
      )
    ]
  )
  (
    LiteralExpr [STRING] [avgcust]
    :
    FunctionCall asterix.avg@1[
      (
        SELECT ELEMENT [
        FieldAccessor [
          FieldAccessor [
            Variable [ Name=$i ]
            Field=o
          ]
          Field=total
        ]
        ]
        FROM [          Variable [ Name=$g ]
          AS Variable [ Name=$i ]
        ]
      )
    ]
  )
]
]
FROM [  FunctionCall asterix.dataset@1[
    LiteralExpr [STRING] [orders-aggreg.Orders]
  ]
  AS Variable [ Name=$o ]
]
Groupby
  Variable [ Name=$cid ]
  :=
  FieldAccessor [
    Variable [ Name=$o ]
    Field=cid
  ]
  GROUP AS Variable [ Name=$g ]
  (
    o:=Variable [ Name=$o ]
  )

